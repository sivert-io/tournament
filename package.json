{
  "name": "tournament",
  "version": "0.0.1",
  "repository": "https://github.com/SivertGullbergHansen/tournament.git",
  "author": "Hansen, Sivert Gullberg <sivert-gullberg.hansen@norsk-tipping.no>",
  "license": "MIT",
  "scripts": {
    "start": "run-p -l start:client start:server start:api",
    "dev": "run-p -l dev:client dev:server dev:api",
    "install": "run-p -l install:client install:server install:api",
    "build": "run-p -l build:client build:server build:api",

    "start:client": "cd client && yarn start",
    "start:server": "cd server && yarn start",
    "start:api": "cd api && yarn start",
    "start:docs": "cd docs && yarn start",

    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "dev:api": "cd api && yarn dev",
    "dev:docs": "cd docs && yarn dev",

    "install:client": "cd client && yarn",
    "install:server": "cd server && yarn",
    "install:api": "cd api && yarn",
    "install:docs": "cd docs && yarn",

    "build:client": "cd client && yarn build",
    "build:server": "cd server && yarn build",
    "build:docs": "cd docs && yarn build",
    "build:api": "cd api && yarn build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}